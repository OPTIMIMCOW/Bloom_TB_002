<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- this part is the background so is set to an invisible colour -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#00ffffff"/>
            <size android:height="10sp"
                android:width="10sp" />
            <corners
                android:bottomRightRadius="10dp"
                android:topRightRadius="10dp"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#a1a0a0"
                    android:centerColor="#a1a0a0"
                    android:centerY="0.5"
                    android:endColor="#a1a0a0"
                    android:angle="0"
                    />
                <stroke
                    android:width="1dp"/>
                <corners
                    android:bottomRightRadius="10dp"
                    android:topRightRadius="10dp"
                    />
            </shape>
        </clip>
    </item>

</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <View
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_gravity="center" />



    <TextView
        android:id="@+id/tv_GoalColour"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="@dimen/summary_activitylist_padding"
        android:textSize="@dimen/summary_activitylist_textsize"
        android:background="@drawable/theme_symbol_01"/>



    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ThemeName"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:hint="Theme Name"
        android:textAlignment="center"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        />


    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="100min"
        android:textAlignment="center"
        android:id="@+id/tv_ThemeGoal"
        android:layout_weight="1"
        android:layout_gravity="center"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        />

    <Button
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/bn_ThemeDelete"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_margin="10dp"/>

</LinearLayout>